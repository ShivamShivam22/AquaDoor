<style>
    body {
        background-color: ghostwhite;
    }

    h1 {
        font-family: 'Montserrat', sans-serif;
        font-weight: bold;
    }
    p {
        font-family: 'Montserrat', sans-serif;
    }

    .row {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 50px;
        margin-bottom: 50px;
    }

    .box {
        width: 200px;
        height: 240px;
        background-color: whitesmoke;
        color: black;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        font-size: 16px;
        border-radius: 5px;
        transition: transform 0.2s ease;
        margin-top: 2%;
    }

        .box:hover {
            transform: scale(1.1);
        }

    img {
        width: 160px;
    }

    .box-content {
        text-align: center;
    }

    .add-to-cart {
        border: 2px solid;
        padding: 5px;
        text-align: center;
        margin-top: 5px;
    }

        .add-to-cart:hover {
            cursor: pointer;
            background-color: darkslategrey;
            color: white;
        }
</style>

