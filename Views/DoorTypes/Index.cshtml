@model IEnumerable<AquaDoor.Models.DoorTypes>

@{
    ViewData["Title"] = "Index";
}

<h1>Doors</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="DoorTypes" asp-action="Index" method="get">
    <p>
        Title: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Meterial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoorType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LockType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Meterial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DoorType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LockType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
